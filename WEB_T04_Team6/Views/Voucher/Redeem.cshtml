@model WEB_T04_Team6.Models.Voucher

@{
    ViewData["Title"] = "Redeem";
}
<h4 class="PageTitle">Redeem Voucher</h4>
<hr />
<body class="bg-light">
    <form asp-action="Redeem">
        <div class="col-lg-10 text-left py-9">
            <div class="form-group row"></div>
            <div class="col-sm-9 col-md-5">
                <input asp-for="IssuingID" class="form-control" hidden />
            </div>
        </div>
            <div class="form-group row">
                <label asp-for="VoucherSN"
                       class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 col-md-5">
                    <input asp-for="VoucherSN" class="form-control" />
                </div>
                <span asp-validation-for="VoucherSN"
                      class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Status"
                       class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 col-md-5">
                    <select asp-for="Status"
                            asp-items="@ViewData["VoucherStatusList"]
 as List<SelectListItem>"
                            class="form-control">
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-9 offset-sm-3">
                    <input type="submit" value="Update"
                           class="btn btn-dark" />
                    <br /><span style="color:red;">@TempData["RedemptionUnccessful"]</span>
                    <br /><span style="color:red;">@TempData["UnableToIssued"]</span>
                </div>
            </div>

            <div>

                <a asp-action="SalesMain" asp-controller="Home">Back to List</a>
            </div>
        </div>
    </form>
</body>


