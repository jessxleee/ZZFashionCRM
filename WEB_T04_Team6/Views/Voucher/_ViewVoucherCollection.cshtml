@model IEnumerable<WEB_T04_Team6.Models.Voucher>

@if (Model.ToList().Count > 0) {

<body class="bg-light">
    <div class="table-responsive">
        <table id="viewStaff" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>MemberID</th>
                    <th>Amount</th>
                    <th>Month Issue For</th>
                    <th>Date Time Issused</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MemberID</td>
                        <td>$@item.Amount</td>
                        <td>@item.MonthIssuedFor</td>
                        <td>@item.DateTimeIssued</td>
                        <td>
                            <a asp-action="Collect" asp-controller="Voucher"
                               asp-route-id="@item.IssuingID">Collect</a> |
                            <a asp-action="Details" asp-controller="Voucher"
                               asp-route-id="@item.IssuingID">Details</a> 
                        </td>
                    </tr>
                    }
            </tbody>
        </table>
    </div>
</body>
    }

else
{
    <span style="color:red">No record found!</span>
}
