@model WEB_T04_Team6.Models.Voucher

@{
    ViewData["Title"] = "Collect";
}

<h4 class="PageTitle">Collect Voucher</h4>
<hr />
<body class="bg-light">
    <form asp-action="Collect" method="post">
        <div class="col-lg-10 text-left py-9">
            <div class="form-group row"></div>
            <div class="col-sm-9 col-md-5">
                <input asp-for="IssuingID" class="form-control" hidden />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="VoucherSN"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="VoucherSN" class="form-control" />
                <span asp-validation-for="VoucherSN"
                      class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Status"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <select asp-for="Status"
                        asp-items="@ViewData["VoucherStatusList"]
 as List<SelectListItem>"
                        class="form-control">
                </select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-9 offset-sm-3">
                <input type="submit" value="Update"
                       class="btn btn-dark" />
            </div>
        </div>


        <br /><span style="color:red;">@TempData["UpdateUnsuccessful"]</span><br />
        <a asp-action="Index" asp-controller="Voucher">Back to List</a>
        </div>
    </form>
</body>