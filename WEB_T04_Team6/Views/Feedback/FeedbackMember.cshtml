
@model IEnumerable<WEB_T04_Team6.Models.Feedback>

@{
    ViewData["Title"] = "Feedback";
}

<body style="background-color:white">
    <p>
        <a asp-controller="Feedback" asp-action="CreateMember">Create Post</a>
    </p>

    <div class="table-responsive">
        <table id="viewFeedback" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Date Posted</th>
                    <th>Title</th>
                    <th>Text</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FeedbackID</td>
                        <td>@item.DateTimePosted</td>
                        <td>@item.Title</td>
                        <td>@item.Text</td>

                        <td>
                            <a asp-action="Details" asp-controller="Response">View Details</a><br />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div>
        <a asp-controller="Home" asp-action="MemberMain">Back</a>
    </div>
</body>
