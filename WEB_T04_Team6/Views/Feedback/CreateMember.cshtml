@model WEB_T04_Team6.Models.Feedback

@{
    ViewData["Title"] = "CreateMember";
}

<h2>Create Post</h2>

<body style="background-color:white">

    <div class="row">
        <div class="col-md-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" placeholder="Enter your title here" required />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Text" class="control-label"></label>
                    <textarea asp-for="Text" class="form-control" placeholder="Enter your feedback here" required></textarea>
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create Post" class="btn btn-dark" />
                </div>

            </form>
        </div>
    </div>

    <div>
        <a asp-controller="Home" asp-action="MemberMain">Back</a>
    </div>

</body>