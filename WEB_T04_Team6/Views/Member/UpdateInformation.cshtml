@model WEB_T04_Team6.Models.Member

@{
    ViewData["Title"] = "UpdateInformation";
}

<body style="background-color:white">
    <div class="container">
        <div class="col-sm-10 text-left py-9">
            <div class="card border border-dark">
                
                <form method="post" asp-action="UpdateInformation">
                    <fieldset class="FormContent">
                        <div class="card-body">
                            <h5 class="card-title PageTitle text-center">Update Information</h5>
                            <div class="form-group row" hidden>
                                <input asp-for="MemberID" class="form-control" /><span asp-validation-for="MemberID" class="text-danger"></span>
                                <input asp-for="MName" class="form-control" /><span asp-validation-for="MName" class="text-danger"></span>
                                <input asp-for="MGender" class="form-control" /><span asp-validation-for="MGender" class="text-danger"></span>
                                <input asp-for="MCountry" class="form-control" /><span asp-validation-for="MCountry" class="text-danger"></span>
                                @Html.Display("MBirthDate")
                            </div>

                            <div class="form-group row">
                                <label asp-for="MAddress"
                                       class="col-sm-3 col-form-label"></label>
                                <div class="col-sm-9 form-control-plaintext">
                                    @Html.Display("MAddress")
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="MAddress"
                                       class="col-sm-3 col-form-label">New Address</label>
                                <div class="col-sm-9 col-md-5">
                                    <input asp-for="MAddress" class="form-control" placeholder="type new address" />
                                    <span asp-validation-for="MAddress"
                                          class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="MTelNo" class="col-sm-3 col-form-label"></label>
                                <div class="col-sm-9 form-control-plaintext">
                                    @Html.Display("MTelNo")
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="MTelNo"
                                       class="col-sm-3 col-form-label">New Telephone Number</label>
                                <div class="col-sm-9 col-md-5">
                                    <input asp-for="MTelNo" class="form-control" placeholder="type new phone number" />
                                    <span asp-validation-for="MTelNo"
                                          class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="MEmailAddr" class="col-sm-3 col-form-label"></label>
                                <div class="col-sm-9 form-control-plaintext">
                                    @Html.Display("MEmailAddr")
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="MEmailAddr"
                                       class="col-sm-3 col-form-label">New Email Address</label>
                                <div class="col-sm-9 col-md-5">
                                    <input asp-for="MEmailAddr" class="form-control" placeholder="type new email address" />
                                    <span asp-validation-for="MEmailAddr"
                                          class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="MPassword"
                                       class="col-sm-3 col-form-label">New Password</label>
                                <div class="col-sm-9 col-md-5">
                                    <input asp-for="MPassword" class="form-control" placeholder="type new password" required="Please type out password" />
                                    <span class="text-danger"></span>
                                    <span asp-validation-for="MPassword"
                                          class="text-danger"></span>
                                </div>
                            </div>

                            <div class="container">
                                <div class="col-sm-12 text-right py-4">
                                    <input type="submit" value="Update" class="btn btn-dark">
                                </div>
                            </div>

                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>

    <br />
    <span style="color:red;">@TempData["Message"]</span>

    <div>
        <a asp-controller="Home" asp-action="MemberMain">Back</a>
    </div>

</body>