@model IEnumerable<WEB_T04_Team6.Models.Member>

@if (Model.ToList().Count > 0)
{
<body class="bg-light">
    <div class="table-responsive">
        <table id="viewMembers" class="table table-striped table-bordered ">
            <thead class="thead-light">
                <tr>
                    <th>Member ID</th>
                    <th>Name</th>
                    <th>Email Address</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MemberID.ToString()</td>
                        <td>@item.MName</td>
                        <td>@item.MEmailAddr</td>


                        <td>
                            <a asp-action="Details" asp-controller="Member"
                               asp-route-id="@item.MemberID">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-action="SalesMain" asp-controller="Home">Back to List</a>
    </div>
    </body>
}
else
{
    <span style="color:red">No record found!</span>
}

