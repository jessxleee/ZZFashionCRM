@model IEnumerable<WEB_T04_Team6.Models.Response>

<body style="background-color:white">

    Response:
    <div class="card border border-dark">
        <div class="card-body">

            @if (Model.ToList().Count > 0)
            {
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Date</th>
                                <th>Responses</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ResponseID.ToString()</td>
                                <td>@item.DateTimePosted.ToLongDateString()</td>
                                <td>@item.Text</td>
                            </tr>
                        }
                    </table>
                </div>
            }
            else
            {
                <span style="color:red">No records!</span>
            }
        </div>
    </div>
    <br />
    <div>
        <a asp-controller="Home" asp-action="MemberMain">Back</a>
    </div>

</body>
            
