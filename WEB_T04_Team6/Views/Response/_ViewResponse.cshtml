@model IEnumerable<WEB_T04_Team6.Models.Response>

@if (Model.ToList().Count > 0)
{
    <div class="table-responsive">
        <table id="viewStaff" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Staff</th>
                    <th>Member</th>
                    <th>Date</th>
                    <th>Responses</th>
                    <th></th>
                </tr>
            </thead>
            <tbody style="background-color:white;">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ResponseID.ToString()</td>
                        <td>@item.StaffID</td>
                        <td>@item.MemberID</td>
                        <td>@item.DateTimePosted.ToLongDateString()</td>
                        <td>@item.Text</td>
                        
                        <td>
                            <a asp-action="View" asp-controller="Response" 
                               asp-route-id="@item.ResponseID"><img src="~/images/Add Button.png" height="50px" width="50px" /></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <span style="color:red">No record found!</span>
}
