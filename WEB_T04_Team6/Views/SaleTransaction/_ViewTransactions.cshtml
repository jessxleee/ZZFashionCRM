@model IEnumerable<WEB_T04_Team6.Models.SaleTransaction>

@if (Model.ToList().Count > 0)
{
    <div class="table-responsive">
        <table id="viewStaff" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Member ID</th>
                    <th>Total Amount Spent</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MemberID</td>
                        <td>@item.Total</td>
                        <td>
                            <a asp-action="Issues" asp-controller="SaleTransaction"
                               asp-route-id="@item.MemberID">Issue Cash Voucher</a> 
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <span style="color:red">No record found!</span>
}
